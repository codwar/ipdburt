<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<listener>
		<listener-class>jipdbs.web.JIPDBSContextListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>serverlist</servlet-name>
		<servlet-class>jipdbs.web.ServerListServlet</servlet-class>
	</servlet>
    <servlet>
        <servlet-name>serverfetch</servlet-name>
        <servlet-class>jipdbs.web.ServerFetchServlet</servlet-class>
    </servlet>
	<servlet>
		<servlet-name>serversave</servlet-name>
		<servlet-class>jipdbs.web.ServerSaveServlet</servlet-class>
	</servlet>
    <servlet>
        <servlet-name>infoservlet</servlet-name>
        <servlet-class>jipdbs.web.InfoServlet</servlet-class>
    </servlet>
	<servlet>
		<servlet-name>xmlrpc</servlet-name>
		<servlet-class>jipdbs.xmlrpc.JIPDBSXmlRpcServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>search</servlet-name>
		<servlet-class>jipdbs.web.SearchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>alias</servlet-name>
		<servlet-class>jipdbs.web.AliasServlet</servlet-class>
	</servlet>
    <servlet>
        <servlet-name>contactform</servlet-name>
        <servlet-class>jipdbs.web.ContactServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>playerinfo</servlet-name>
        <servlet-class>jipdbs.web.PlayerInfoServlet</servlet-class>
    </servlet>
        
    <servlet-mapping>
        <servlet-name>playerinfo</servlet-name>
        <url-pattern>/playerinfo</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
		<servlet-name>serverlist</servlet-name>
		<url-pattern>/serverlist</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
        <servlet-name>contactform</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>	
    <servlet-mapping>
        <servlet-name>infoservlet</servlet-name>
        <url-pattern>/infoservlet</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
		<servlet-name>serversave</servlet-name>
		<url-pattern>/admin/serversave</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
        <servlet-name>serverfetch</servlet-name>
        <url-pattern>/admin/serverfetch</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
		<servlet-name>xmlrpc</servlet-name>
		<url-pattern>/xmlrpc</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>search</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>alias</servlet-name>
		<url-pattern>/alias</url-pattern>
	</servlet-mapping>
    
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>tasks</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

	<error-page>
		<error-code>403</error-code>
		<location>/error.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/error.jsp</location>
	</error-page>
    
	<welcome-file-list>
		<welcome-file>search.jsp</welcome-file>
	</welcome-file-list>
</web-app>
