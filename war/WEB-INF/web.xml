<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<listener>
		<listener-class>jipdbs.web.JIPDBSContextListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>serverlist</servlet-name>
		<servlet-class>jipdbs.web.ServerListServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>serversave</servlet-name>
		<servlet-class>jipdbs.web.ServerSaveServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>xmlrpc</servlet-name>
		<servlet-class>jipdbs.xmlrpc.JIPDBSXmlRpcServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>search</servlet-name>
		<servlet-class>jipdbs.web.SearchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>alias</servlet-name>
		<servlet-class>jipdbs.web.AliasServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>serverlist</servlet-name>
		<url-pattern>/serverlist</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>serversave</servlet-name>
		<url-pattern>/serversave</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>xmlrpc</servlet-name>
		<url-pattern>/xmlrpc</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>search</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>alias</servlet-name>
		<url-pattern>/alias</url-pattern>
	</servlet-mapping>

	<jsp-config>
		<jsp-property-group>
			<url-pattern>/search.jsp</url-pattern>
			<url-pattern>/serverlist.jsp</url-pattern>
			<url-pattern>/admin/serverlist.jsp</url-pattern>
			<include-prelude>/WEB-INF/include/prelude.jsp</include-prelude>
			<include-coda>/WEB-INF/include/coda.jsp</include-coda>
		</jsp-property-group>
	</jsp-config>

	<welcome-file-list>
		<welcome-file>search.jsp</welcome-file>
	</welcome-file-list>
</web-app>
