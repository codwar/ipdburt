<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
	<application>ipdburt</application>
	<version>1</version>
	
	<!-- Configure java.util.logging -->
	<system-properties>
		<property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
	</system-properties>

    <ssl-enabled>true</ssl-enabled>

    <warmup-requests-enabled>true</warmup-requests-enabled>

    <!-- TO ALLOW THE APP SEND MAIL WITH OWN ADDRESS -->
    <inbound-services>
        <service>mail</service>
    </inbound-services>

    <static-files>
        <include path="/**.png" expiration="14d"/>
        <include path="/**.jpg" expiration="14d"/>
        <include path="/**.gif" expiration="14d"/>
        <include path="/**.ico" expiration="14d"/>
        <include path="/**.js" expiration="1h"/> <!-- AT LEAST UNTIL RELEASE -->
        <include path="/**.css" expiration="1h"/> <!-- AT LEAST UNTIL RELEASE -->
    </static-files>
    	
</appengine-web-app>